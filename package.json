{
  "name": "agent-remote",
  "version": "0.4.0",
  "type": "module",
  "description": "Connect to your AI coding agent from anywhere - a universal web interface for OpenCode, GitHub Copilot CLI, and more",
  "author": "thinkall",
  "main": "out/main/index.cjs",
  "scripts": {
    "dev": "electron-vite dev",
    "build": "electron-vite build",
    "preview": "electron-vite preview",
    "pack": "electron-builder --dir",
    "dist": "electron-builder --publish never",
    "dist:mac": "electron-builder --mac --publish never",
    "dist:mac:arm64": "electron-builder --mac --arm64 --publish never",
    "dist:mac:x64": "electron-builder --mac --x64 --publish never",
    "dist:win": "electron-builder --win --publish never",
    "typecheck": "tsc --noEmit",
    "setup": "bun scripts/setup.ts",
    "start": "bun scripts/start.ts",
    "start:copilot": "bun scripts/start-copilot.ts",
    "update:opencode": "bun scripts/update-opencode.ts",
    "update:cloudflared": "bun scripts/update-cloudflared.ts",
    "test:web-api": "bun scripts/test-web-api.ts"
  },
  "dependencies": {
    "@shikijs/transformers": "^1.22.0",
    "@solid-primitives/i18n": "^2.2.1",
    "@solidjs/router": "^0.14.10",
    "clsx": "^2.1.0",
    "diff": "^5.1.0",
    "lang-map": "^0.4.0",
    "luxon": "^3.4.0",
    "marked": "^11.1.0",
    "marked-shiki": "^1.1.2",
    "shiki": "^1.22.0",
    "solid-js": "^1.8.0",
    "tailwind-merge": "^2.2.0",
    "vscode-languageserver-types": "^3.17.5"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.0.0",
    "@types/diff": "^5.0.9",
    "@types/luxon": "^3.4.0",
    "@types/node": "^20.0.0",
    "bun-types": "latest",
    "electron": "33",
    "electron-builder": "^25.1.8",
    "electron-vite": "^2.3.0",
    "tailwindcss": "^4.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vite-plugin-solid": "^2.10.0",
    "wrangler": "^4.61.1"
  }
}
